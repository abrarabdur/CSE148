package textIO;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class TextIO {

	public static void main(String[] args) throws IOException {
		// create or save info to a text file
		FileWriter fw = new FileWriter("data/output.txt");
		PrintWriter pw = new PrintWriter(fw); // wrapper class
		pw.println("Joe");
		pw.write("John");
		pw.close();

		// read from a text file
		File file = new File("data/output.txt");
		Scanner out = new Scanner(file);
		String name1 = out.nextLine();
		String name2 = out.nextLine();
		System.out.println(name1 + "\t" + name2);
	}

}
