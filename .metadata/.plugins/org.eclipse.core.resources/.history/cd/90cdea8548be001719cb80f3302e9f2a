package p2;

public class Student {
	private String name;
	private double gpa;

	public Student(String name, double gpa) throws Exception {
		super();
		this.name = name;
		if(gpa < 0.0 || gpa > 4.0) {
//			Exception e = new Exception("Invalid GPA Entered!");
//			throw e;
			throw new Exception("Invalid GPA Entered!");
					
		}
		this.gpa = gpa;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getGpa() {
		return gpa;
	}

	public void setGpa(double gpa) {
		this.gpa = gpa;
	}

	@Override
	public String toString() {
		return "Student [name=" + name + ", gpa=" + gpa + "]";
	}

}
