package p2;

public class Student {
	private String name;
	private double gpa;

	public Student(String name, double gpa) {
		super();
		this.name = name;
		if (gpa < 0.0) {
			try {
				throw new Exception("GPA entered is too small. Now it's set to zero!");
			} catch (Exception e) {
//				e.printStackTrace();
				System.out.println(e.getMessage());
			}
			this.gpa = 0.0;
		} else if (gpa > 4.0) {
			try {
				throw new Exception("GPA entered is too big. Now it's set to zero!");
			} catch (Exception e) {
//				e.printStackTrace();
				System.out.println(e.getMessage());
			}
			this.gpa = 0.0; 
		} else {
			this.gpa = gpa;
		}
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getGpa() {
		return gpa;
	}

	public void setGpa(double gpa) {
		if (gpa < 0.0) {
			try {
				throw new Exception("GPA entered is too small. Now it's set to zero!");
			} catch (Exception e) {
//				e.printStackTrace();
				System.out.println(e.getMessage());
			}
			this.gpa = 0.0;
		} else if (gpa > 4.0) {
			try {
				throw new Exception("GPA entered is too big. Now it's set to zero!");
			} catch (Exception e) {
//				e.printStackTrace();
				System.out.println(e.getMessage());
			}
			this.gpa = 0.0; 
		} else {
			this.gpa = gpa;
		}

	}

	@Override
	public String toString() {
		return "Student [name=" + name + ", gpa=" + gpa + "]";
	}

}
