package p2;

public class Student {
	private String name;
	private double gpa;
	
	private final double MIN_GPA = 0.0;
	private final double MAX_GPA = 4.0;

	public Student(String name, double gpa) {
		super();
		this.name = name;
		checkGPA(gpa);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getGpa() {
		return gpa;
	}

	public void setGpa(double gpa) {
		checkGPA(gpa);
	}

	private void checkGPA(double gpa) {
		if (gpa < MIN_GPA) {
			try {
				throw new Exception("GPA entered is too small. Now it's set to the minimum GPA value!");
			} catch (Exception e) {
				// e.printStackTrace();
				System.out.println(e.getMessage());
			}
			this.gpa = MIN_GPA;
		} else if (gpa > MAX_GPA) {
			try {
				throw new Exception("GPA entered is too big. Now it's set to the minimum GPA value!");
			} catch (Exception e) {
				// e.printStackTrace();
				System.out.println(e.getMessage());
			}
			this.gpa = MIN_GPA;
		} else {
			this.gpa = gpa;
		}

	}

	@Override
	public String toString() {
		return "Student [name=" + name + ", gpa=" + gpa + "]";
	}

}
